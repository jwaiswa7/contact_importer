<%= render "shared/nav" %>
<div class="row justify-content-center">
	<div class="col-6">
    <h4>Please set the column name for the information in the file below</h4>
		<% if @contact_upload.errors.any? %>
		  <ul>
            <% @contact_upload.errors.full_messages.each do |message|%>
              <li><%= message %> </li>
            <%end%>
          </ul>
        <%end%>
		<%= form_for @contact_upload do |f| %>
          <%= f.number_field :name, placeholder: "name column" , class: "form-control",  required: true%>
          <%= f.number_field :email, placeholder: "email column" , class: "form-control",  required: true%>
          <%= f.number_field :date_of_birth, placeholder: "date of birth" , class: "form-control",  required: true %>
          <%= f.number_field :telephone, placeholder: "telephone" , class: "form-control",  required: true %>
          <%= f.number_field :address, placeholder: "address" , class: "form-control",  required: true %>
          <%= f.number_field :credit_card, placeholder: "credit card" , class: "form-control",  required: true %>
          <%= f.submit "Process file", class: "btn btn-success" %>
        <% end %>
	</div>
</div>